@model basics.Models.User
@{
    ViewData["Title"] = "Profilim";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/profile-style.css" />

<div class="profile-page">
    <div class="profile-container">
        <!-- Üst Kısım - Başlık -->
        <div class="profile-header">
            <div class="profile-avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            <h1>@Model.FullName</h1>
            <p>Hesap bilgilerinizi güncelleyin</p>
        </div>

        <!-- Form Kartı -->
        <div class="profile-form-card">
            @if (ViewBag.Error != null)
            {
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>@ViewBag.Error</span>
                </div>
            }

            @if (ViewBag.Success != null)
            {
                <div class="success-message">
                    <i class="fas fa-check-circle"></i>
                    <span>@ViewBag.Success</span>
                </div>
            }

            <form method="post" class="profile-form" id="profileForm">
                <div class="form-section">
                    <h3><i class="fas fa-user"></i> Kişisel Bilgiler</h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">
                                <i class="fas fa-user"></i>
                                Ad <span class="required">*</span>
                            </label>
                            <input type="text" 
                                   id="firstName" 
                                   name="firstName" 
                                   value="@Model.FirstName" 
                                   placeholder="Adınız" 
                                   required />
                        </div>

                        <div class="form-group">
                            <label for="lastName">
                                <i class="fas fa-user"></i>
                                Soyad <span class="required">*</span>
                            </label>
                            <input type="text" 
                                   id="lastName" 
                                   name="lastName" 
                                   value="@Model.LastName" 
                                   placeholder="Soyadınız" 
                                   required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email">
                            <i class="fas fa-envelope"></i>
                            E-posta <span class="required">*</span>
                        </label>
                        <input type="email" 
                               id="email" 
                               name="email" 
                               value="@Model.Email" 
                               placeholder="ornek@email.com" 
                               required />
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="city">
                                <i class="fas fa-city"></i>
                                Şehir
                            </label>
                            <input type="text" 
                                   id="city" 
                                   name="city" 
                                   value="@Model.City" 
                                   placeholder="İstanbul" />
                        </div>

                        <div class="form-group">
                            <label for="birthDate">
                                <i class="fas fa-birthday-cake"></i>
                                Doğum Tarihi
                            </label>
                            <input type="date" 
                                   id="birthDate" 
                                   name="birthDate" 
                                   value="@(Model.BirthDate?.ToString("yyyy-MM-dd"))" />
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h3><i class="fas fa-phone"></i> İletişim Bilgileri</h3>
                    
                    <div class="form-group">
                        <label for="phoneNumber">
                            <i class="fas fa-mobile-alt"></i>
                            Cep Telefonu (GSM)
                        </label>
                        <div class="phone-input-wrapper">
                            <span class="country-code-label">+90</span>
                            <input type="tel" 
                                   id="phoneNumber" 
                                   name="phoneNumber" 
                                   value="@(Model.PhoneNumber?.Replace("+90", ""))" 
                                   placeholder="5XX XXX XX XX"
                                   maxlength="10"
                                   pattern="[0-9]{10}" />
                        </div>
                        <small class="form-hint">Başında 0 olmadan 10 haneli telefon numaranızı girin</small>
                    </div>
                </div>

                <button type="submit" class="btn-profile-submit">
                    <i class="fas fa-save"></i>
                    <span>Değişiklikleri Kaydet</span>
                </button>
            </form>

            <div class="profile-info">
                <p><i class="fas fa-calendar-alt"></i> Hesap oluşturulma tarihi: @Model.CreatedAt.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</p>
            </div>
        </div>

        <a href="@Url.Action("Index", "Home")" class="btn-back-home">
            <i class="fas fa-home"></i>
            <span>Ana Sayfaya Dön</span>
        </a>
    </div>
</div>

<script>
    // Form animasyonu
    document.getElementById('profileForm').addEventListener('submit', function(e) {
        const btn = this.querySelector('.btn-profile-submit');
        btn.classList.add('loading');
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Kaydediliyor...</span>';
    });

    // Telefon numarası formatı
    const phoneInput = document.getElementById('phoneNumber');
    phoneInput.addEventListener('input', function(e) {
        // Sadece rakamları al
        this.value = this.value.replace(/[^0-9]/g, '');
    });
</script>
