<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yönetim Paneli</title>
    
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/ico/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/ico/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/ico/favicon-16x16.png">
    <link rel="manifest" href="~/ico/site.webmanifest">
    <link rel="shortcut icon" href="~/ico/favicon.ico">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f2f5;
            min-height: 100vh;
        }
        
        /* Sidebar Tasarımı - Daha Büyük ve Modern */
        .sidebar {
            height: 100vh;
            width: 280px;
            position: fixed;
            top: 0;
            left: 0;
            background: linear-gradient(180deg, #1a1f2e 0%, #0f1318 100%);
            padding: 0;
            transition: all 0.3s ease;
            z-index: 1000;
            overflow-y: auto;
            box-shadow: 4px 0 20px rgba(0,0,0,0.15);
        }

        /* Scrollbar Stili */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }
        .sidebar::-webkit-scrollbar-track {
            background: transparent;
        }
        .sidebar::-webkit-scrollbar-thumb {
            background: rgba(255,255,255,0.1);
            border-radius: 3px;
        }
        .sidebar::-webkit-scrollbar-thumb:hover {
            background: rgba(255,255,255,0.2);
        }

        /* Logo Alanı */
        .sidebar-brand {
            padding: 28px 24px;
            display: flex;
            align-items: center;
            gap: 14px;
            border-bottom: 1px solid rgba(255,255,255,0.08);
            margin-bottom: 10px;
        }
        .sidebar-brand .brand-icon {
            width: 48px;
            height: 48px;
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.4rem;
            color: white;
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
        }
        .sidebar-brand .brand-text {
            color: white;
            font-size: 1.3rem;
            font-weight: 700;
            letter-spacing: -0.5px;
        }
        .sidebar-brand .brand-sub {
            color: rgba(255,255,255,0.5);
            font-size: 0.75rem;
            font-weight: 400;
        }

        /* Menü Başlığı */
        .menu-title {
            padding: 20px 24px 10px;
            color: rgba(255,255,255,0.4);
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1.2px;
        }

        /* Menü Öğeleri */
        .sidebar-nav {
            padding: 0 12px;
        }
        
        .sidebar a.nav-link {
            padding: 16px 20px;
            text-decoration: none;
            font-size: 0.95rem;
            font-weight: 500;
            color: rgba(255,255,255,0.7);
            display: flex;
            align-items: center;
            gap: 14px;
            transition: all 0.25s ease;
            border-radius: 12px;
            margin-bottom: 6px;
            border: 1px solid transparent;
        }

        .sidebar a.nav-link:hover {
            color: #fff;
            background: rgba(255,255,255,0.08);
            transform: translateX(4px);
        }

        .sidebar a.nav-link.active {
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(13, 110, 253, 0.35);
            border-color: rgba(255,255,255,0.1);
        }
        
        .sidebar a.nav-link i {
            width: 22px;
            font-size: 1.1rem;
            text-align: center;
            opacity: 0.9;
        }

        .sidebar a.nav-link.active i {
            opacity: 1;
        }

        /* Menü Ayracı */
        .sidebar-divider {
            height: 1px;
            background: rgba(255,255,255,0.08);
            margin: 16px 24px;
        }

        /* Alt Menü - Siteye Dön */
        .sidebar-footer {
            padding: 20px 12px;
            margin-top: auto;
        }
        
        .sidebar a.nav-link.nav-warning {
            color: #ffc107;
            background: rgba(255, 193, 7, 0.1);
            border: 1px solid rgba(255, 193, 7, 0.2);
        }
        .sidebar a.nav-link.nav-warning:hover {
            background: rgba(255, 193, 7, 0.2);
            color: #ffc107;
        }

        /* Ana İçerik Alanı */
        .main-content {
            margin-left: 280px;
            padding: 24px;
            min-height: 100vh;
            transition: all 0.3s ease;
        }

        /* Üst Navbar */
        .top-navbar {
            background: white;
            box-shadow: 0 2px 12px rgba(0,0,0,0.06);
            padding: 16px 28px;
            border-radius: 16px;
            margin-bottom: 28px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .top-navbar h5 {
            font-weight: 600;
            color: #1a1f2e;
        }

        /* Kullanıcı Dropdown */
        .user-dropdown {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 8px 16px;
            background: #f8f9fa;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            color: inherit;
        }
        .user-dropdown:hover {
            background: #e9ecef;
        }
        .user-dropdown img {
            width: 38px;
            height: 38px;
            border-radius: 50%;
            border: 2px solid #0d6efd;
        }
        .user-dropdown .user-info {
            line-height: 1.2;
        }
        .user-dropdown .user-name {
            font-weight: 600;
            font-size: 0.9rem;
            color: #1a1f2e;
        }
        .user-dropdown .user-role {
            font-size: 0.75rem;
            color: #6c757d;
        }

        /* Kart Tasarımı */
        .card {
            border: none;
            box-shadow: 0 2px 12px rgba(0,0,0,0.06);
            border-radius: 16px;
        }

        /* Mobilde Sidebar Gizleme */
        @@media (max-width: 991px) {
            .sidebar {
                margin-left: -280px;
            }
            .sidebar.active {
                margin-left: 0;
            }
            .main-content {
                margin-left: 0;
            }
        }

        /* Masaüstü Sidebar Collapse */
        .sidebar.collapsed {
            margin-left: -280px;
        }
        .main-content.collapsed {
            margin-left: 0;
        }

        /* Mobil Toggle Butonu */
        .mobile-toggle {
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f8f9fa;
            border: none;
            border-radius: 12px;
            font-size: 1.2rem;
            color: #1a1f2e;
            transition: all 0.2s;
        }
        .mobile-toggle:hover {
            background: #e9ecef;
        }
    </style>
</head>
<body>

    <div class="sidebar" id="sidebar">
        <!-- Logo Alanı -->
        <div class="sidebar-brand">
            <div class="brand-icon">
                <i class="fa-solid fa-ticket"></i>
            </div>
            <div>
                <div class="brand-text">Archura</div>
                <div class="brand-sub">Yönetim Paneli</div>
            </div>
        </div>
        
        <!-- Ana Menü -->
        <div class="menu-title">Ana Menü</div>
        <nav class="sidebar-nav">
            <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="nav-link">
                <i class="fa-solid fa-gauge-high"></i>
                <span>Dashboard</span>
            </a>
            
            @if (User.IsInRole("Admin"))
            {
                <a asp-area="Admin" asp-controller="Salon" asp-action="Index" class="nav-link">
                    <i class="fa-solid fa-couch"></i>
                    <span>Salon Yönetimi</span>
                </a>
            }
            
            <a asp-area="Admin" asp-controller="Etkinlikler" asp-action="Index" class="nav-link">
                <i class="fa-solid fa-masks-theater"></i>
                <span>Etkinlikler</span>
            </a>
            
            <a asp-area="Admin" asp-controller="Satislar" asp-action="Index" class="nav-link">
                <i class="fa-solid fa-money-bill-trend-up"></i>
                <span>Satışlar</span>
            </a>
        </nav>
        
        <!-- Yönetim Menüsü -->
        <div class="menu-title">Yönetim</div>
        <nav class="sidebar-nav">
            @if (User.IsInRole("Admin"))
            {
                <a asp-area="Admin" asp-controller="Admin" asp-action="Users" class="nav-link">
                    <i class="fa-solid fa-users"></i>
                    <span>Kullanıcılar</span>
                </a>
            }
            
            @if (User.IsInRole("Admin") || User.IsInRole("Okan"))
            {
                <a asp-area="Admin" asp-controller="Rapor" asp-action="Index" class="nav-link">
                    <i class="fa-solid fa-chart-line"></i>
                    <span>Raporlar</span>
                </a>
            }
            
            <a asp-area="Admin" asp-controller="Galleri" asp-action="Index" class="nav-link">
                <i class="fa-solid fa-images"></i>
                <span>Galeri</span>
            </a>
            
            <a asp-area="Admin" asp-controller="BiletKontrol" asp-action="Index" class="nav-link">
                <i class="fa-solid fa-qrcode"></i>
                <span>Bilet Kontrol</span>
            </a>
        </nav>
        
        <div class="sidebar-divider"></div>
        
        <!-- Alt Menü -->
        <div class="sidebar-footer">
            <nav class="sidebar-nav">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link nav-warning">
                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                    <span>Siteye Dön</span>
                </a>
            </nav>
        </div>
    </div>

    <div class="main-content" id="main-content">
        
        <div class="top-navbar">
            <div class="d-flex align-items-center gap-3">
                <button class="mobile-toggle d-lg-none" id="sidebarToggle">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <h5 class="m-0">@ViewData["Title"]</h5>
            </div>

            <div class="dropdown">
                @{
                    var userName = User.Identity?.Name ?? "Admin";
                    var userRole = User.IsInRole("Admin") ? "Yönetici" : User.IsInRole("Okan") ? "Okan" : "Editor";
                }
                <a href="#" class="user-dropdown dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://ui-avatars.com/api/?name=@userName&background=0D6EFD&color=fff&bold=true" alt="">
                    <div class="user-info d-none d-sm-block">
                        <div class="user-name">@userName</div>
                        <div class="user-role">@userRole</div>
                    </div>
                    <i class="fa-solid fa-chevron-down ms-1 d-none d-sm-inline" style="font-size: 0.7rem; color: #6c757d;"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="dropdownUser1" style="border-radius: 12px; border: none; margin-top: 10px;">
                    <li><a class="dropdown-item py-2" href="#"><i class="fa-solid fa-gear me-2 text-muted"></i>Ayarlar</a></li>
                    <li><a class="dropdown-item py-2" href="#"><i class="fa-solid fa-user me-2 text-muted"></i>Profil</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item py-2 text-danger" asp-area="Admin" asp-controller="Login" asp-action="CikisYap"><i class="fa-solid fa-right-from-bracket me-2"></i>Çıkış Yap</a></li>
                </ul>
            </div>
        </div>

        @RenderBody()
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar Toggle Fonksiyonu (Global)
        window.toggleSidebar = function() {
            var sidebar = document.getElementById('sidebar');
            var mainContent = document.getElementById('main-content');
            var isMobile = window.innerWidth <= 991;
            
            if (isMobile) {
                // Mobilde sadece active class kullan
                sidebar.classList.toggle('active');
            } else {
                // Masaüstünde collapsed class kullan
                sidebar.classList.toggle('collapsed');
                mainContent.classList.toggle('collapsed');
            }
        };

        // Mobil toggle butonu
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            window.toggleSidebar();
        });
        
        // Mobilde sidebar dışına tıklayınca kapat
        document.addEventListener('click', function(e) {
            var sidebar = document.getElementById('sidebar');
            var toggleBtn = document.getElementById('sidebarToggle');
            var isMobile = window.innerWidth <= 991;
            
            if (isMobile && sidebar.classList.contains('active')) {
                if (!sidebar.contains(e.target) && !toggleBtn.contains(e.target)) {
                    sidebar.classList.remove('active');
                }
            }
        });

        // Aktif sayfa için menü öğesini işaretle
        document.addEventListener('DOMContentLoaded', function() {
            var currentPath = window.location.pathname.toLowerCase();
            var navLinks = document.querySelectorAll('.sidebar a.nav-link:not(.nav-warning)');
            var bestMatch = null;
            var bestMatchLength = 0;
            
            navLinks.forEach(function(link) {
                link.classList.remove('active');
                var href = link.getAttribute('href');
                if (href) {
                    var hrefLower = href.toLowerCase();
                    // En uzun eşleşmeyi bul (daha spesifik URL)
                    if (currentPath.startsWith(hrefLower) || currentPath === hrefLower) {
                        if (hrefLower.length > bestMatchLength) {
                            bestMatchLength = hrefLower.length;
                            bestMatch = link;
                        }
                    }
                }
            });
            
            // Eşleşme bulunamadıysa controller bazlı kontrol yap
            if (!bestMatch) {
                navLinks.forEach(function(link) {
                    var href = link.getAttribute('href');
                    if (href) {
                        var hrefParts = href.toLowerCase().split('/').filter(p => p);
                        var pathParts = currentPath.split('/').filter(p => p);
                        // Admin controller eşleştirmesi
                        if (hrefParts.length >= 2 && pathParts.length >= 2) {
                            if (hrefParts[1] === pathParts[1]) { // Controller ismi eşleşmesi
                                if (!bestMatch || hrefParts.length > bestMatchLength) {
                                    bestMatch = link;
                                    bestMatchLength = hrefParts.length;
                                }
                            }
                        }
                    }
                });
            }
            
            if (bestMatch) {
                bestMatch.classList.add('active');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>