@{
    ViewData["Title"] = "Salon Oluşturma";
    Layout = "_AdminLayout"; // Admin sayfaları için özel layout kullan
}

<!-- React uygulamasının yerleşeceği kutu -->
<!-- DİKKAT: index.js dosyasındaki 'react-root' ID'si ile burası aynı olmalı -->
<div id="react-root" style="min-height: 800px;">
    <div class="text-center mt-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
        <p class="mt-2">Oturma Planı Tasarımcısı Yükleniyor...</p>
    </div>
</div>

@section Scripts {
    <!-- React Build Dosyasını Çağırıyoruz -->
    <!-- Webpack ile oluşturduğumuz bundle.js dosyasının yolu -->
    <script src="~/js/bundle.js" asp-append-version="true"></script>
}
