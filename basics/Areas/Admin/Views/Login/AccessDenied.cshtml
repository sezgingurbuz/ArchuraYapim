@{
    ViewData["Title"] = "Erişim Engellendi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Archura Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
        }
        
        .error-container {
            text-align: center;
            color: white;
        }
        
        .error-icon {
            font-size: 120px;
            margin-bottom: 30px;
            animation: shake 0.5s;
            animation-iteration-count: 1;
        }
        
        @@keyframes shake {
            0% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            50% { transform: translateX(10px); }
            75% { transform: translateX(-10px); }
            100% { transform: translateX(0); }
        }
        
        .error-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 60px 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            max-width: 600px;
            margin: 20px;
        }
        
        .error-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: #dc3545;
            margin-bottom: 20px;
        }
        
        .error-message {
            font-size: 1.2rem;
            color: #6c757d;
            margin-bottom: 30px;
            line-height: 1.6;
        }
        
        .btn-home {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 15px 40px;
            font-size: 1.1rem;
            border-radius: 50px;
            color: white;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
        
        .btn-home:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
            color: white;
        }
        
        .info-box {
            background: #f8f9fa;
            border-left: 4px solid #ffc107;
            padding: 20px;
            margin: 30px 0;
            border-radius: 8px;
            text-align: left;
        }
        
        .info-box h6 {
            color: #856404;
            font-weight: 600;
            margin-bottom: 10px;
        }
        
        .info-box ul {
            color: #6c757d;
            margin-bottom: 0;
            padding-left: 20px;
        }
        
        .info-box li {
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-card">
            <div class="error-icon">
                <i class="fa-solid fa-shield-halved text-danger"></i>
            </div>
            
            <h1 class="error-title">Erişim Engellendi!</h1>
            
            <p class="error-message">
                Bu sayfaya erişim yetkiniz bulunmamaktadır.
                <br>
                Lütfen erişim izni için sistem yöneticiniz ile iletişime geçin.
            </p>
            
            
            
            <div class="mt-4">
                <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="btn-home">
                    <i class="fa-solid fa-home me-2"></i>Ana Sayfaya Dön
                </a>
            </div>
            
            <div class="mt-4">
                <small class="text-muted">
                    Oturum Kullanıcısı: <strong>@User.Identity.Name</strong>
                    @if (User.IsInRole("Admin"))
                    {
                        <span class="badge bg-danger ms-2">Admin</span>
                    }
                    else if (User.IsInRole("Okan"))
                    {
                        <span class="badge bg-warning ms-2">Tam Yetki</span>
                    }
                    else if (User.IsInRole("Berke"))
                    {
                        <span class="badge bg-secondary ms-2">Satış ve Görüntüleme</span>
                    }
                </small>
            </div>
        </div>
    </div>
</body>
</html>
