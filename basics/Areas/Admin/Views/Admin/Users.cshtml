@model List<basics.Areas.Admin.Models.AdminUser>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-users me-2"></i>Kullanıcı Yönetimi</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa-solid fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa-solid fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- YENİ KULLANICI EKLEME FORMU -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="m-0"><i class="fa-solid fa-user-plus me-2"></i>Yeni Kullanıcı Ekle</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddUser" method="post">
                <div class="row">
                    <div class="col-md-5">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanıcı Adı <span class="text-danger">*</span></label>
                            <input type="text" name="userName" class="form-control" required placeholder="admin" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Şifre <span class="text-danger">*</span></label>
                            <input type="password" name="password" class="form-control" required placeholder="********" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Rol <span class="text-danger">*</span></label>
                            <select name="role" class="form-select" required>
                                <option value="Berke">Satış ve Görüntüleme</option>
                                <option value="Okan">Tam Yetki</option>
                                <option value="Admin">Admin</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <div class="mb-3 w-100">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fa-solid fa-plus me-1"></i>Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- ŞİFRE DEĞİŞTİRME FORMU -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-warning text-dark py-3">
            <h5 class="m-0"><i class="fa-solid fa-key me-2"></i>Şifre Değiştir</h5>
        </div>
        <div class="card-body">
            <form asp-action="ChangePassword" method="post">
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanıcı <span class="text-danger">*</span></label>
                            <select name="userId" class="form-select" required>
                                <option value="">Seçiniz...</option>
                                @foreach (var user in Model)
                                {
                                    <option value="@user.Id">@user.userName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mevcut Şifre <span class="text-danger">*</span></label>
                            <input type="password" name="currentPassword" class="form-control" required placeholder="Mevcut şifre" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Yeni Şifre <span class="text-danger">*</span></label>
                            <input type="password" name="newPassword" class="form-control" required placeholder="En az 6 karakter" minlength="6" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Şifre Tekrar <span class="text-danger">*</span></label>
                            <input type="password" name="confirmPassword" class="form-control" required placeholder="Tekrar" minlength="6" />
                        </div>
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <div class="mb-3 w-100">
                            <button type="submit" class="btn btn-warning w-100" onclick="return confirm('Seçili kullanıcının şifresini değiştirmek istediğinize emin misiniz?')">
                                <i class="fa-solid fa-save"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="alert alert-info py-2 mb-0 mt-2">
                    <i class="fa-solid fa-info-circle me-2"></i>
                    <small>Şifre değiştirmek için önce mevcut şifreyi doğru girmeniz gerekmektedir.</small>
                </div>
            </form>
        </div>
    </div>

    <!-- KULLANICI LİSTESİ -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="m-0 text-muted"><i class="fa-solid fa-list me-2"></i>Mevcut Kullanıcılar</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Kullanıcı Adı</th>
                        <th>Rol</th>
                        <th class="d-none d-md-table-cell">Şifre Hash</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="ps-4">#@user.Id</td>
                                <td>
                                    <i class="fa-solid fa-user text-primary me-2"></i>
                                    <strong>@user.userName</strong>
                                </td>
                                <td>
                                    <span class="badge @(user.Role == "Admin" ? "bg-danger" : user.Role == "Okan" ? "bg-warning" : "bg-secondary")">
                                        @(user.Role == "Berke" ? "Satış ve Görüntüleme" : user.Role == "Okan" ? "Tam Yetki" : user.Role)
                                    </span>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <code class="text-muted">@user.passwordHash.Substring(0, Math.Min(50, user.passwordHash.Length))...</code>
                                </td>
                                <td class="text-end pe-4">
                                    @if (user.userName.ToLower() == "admin")
                                    {
                                        <span class="badge bg-danger">Silinemez</span>
                                    }
                                    else
                                    {
                                        <a asp-action="DeleteUser" asp-route-id="@user.Id" 
                                           class="btn btn-outline-danger btn-sm" 
                                           onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?')" 
                                           title="Kullanıcıyı Sil">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                Henüz kullanıcı bulunmuyor. Yukarıdaki formdan yeni kullanıcı ekleyebilirsiniz.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
</style>

<script>
    // Başarı/hata mesajlarını otomatik kapat
    setTimeout(function() {
        $('.alert').fadeOut('slow');
    }, 3000);
</script>
