@model List<basics.Areas.Admin.Models.AdminUser>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-users me-2"></i>Kullanıcı Yönetimi</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa-solid fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa-solid fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- YENİ KULLANICI EKLEME FORMU -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="m-0"><i class="fa-solid fa-user-plus me-2"></i>Yeni Kullanıcı Ekle</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddUser" method="post">
                <div class="row">
                    <div class="col-md-5">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanıcı Adı <span class="text-danger">*</span></label>
                            <input type="text" name="userName" class="form-control" required placeholder="admin" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Şifre <span class="text-danger">*</span></label>
                            <input type="password" name="password" class="form-control" required placeholder="********" />
                        </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <div class="mb-3 w-100">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fa-solid fa-plus me-1"></i>Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- KULLANICI LİSTESİ -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="m-0 text-muted"><i class="fa-solid fa-list me-2"></i>Mevcut Kullanıcılar</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Kullanıcı Adı</th>
                        <th>Şifre Hash</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="ps-4">#@user.Id</td>
                                <td>
                                    <i class="fa-solid fa-user text-primary me-2"></i>
                                    <strong>@user.userName</strong>
                                </td>
                                <td>
                                    <code class="text-muted">@user.passwordHash.Substring(0, Math.Min(50, user.passwordHash.Length))...</code>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="DeleteUser" asp-route-id="@user.Id" 
                                       class="btn btn-outline-danger btn-sm" 
                                       onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?')" 
                                       title="Kullanıcıyı Sil">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                Henüz kullanıcı bulunmuyor. Yukarıdaki formdan yeni kullanıcı ekleyebilirsiniz.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
</style>

<script>
    // Başarı/hata mesajlarını otomatik kapat
    setTimeout(function() {
        $('.alert').fadeOut('slow');
    }, 3000);
</script>
