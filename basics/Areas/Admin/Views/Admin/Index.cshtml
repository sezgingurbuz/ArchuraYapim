                            <h3>@Model.ToplamSatilanBilet</h3>
                            <p class="mb-0 mt-2">
                                <span class="text-muted small">
                                    <i class="fa-solid fa-chart-line me-1"></i>TÃ¼m zamanlar
                                </span>
                            </p>
                        </div>
                        <div class="stat-icon bg-success text-white">
                            <i class="fa-solid fa-ticket"></i>
