@model basics.Areas.Admin.Models.DashboardViewModel
@{
    ViewData["Title"] = "Kontrol Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Premium Dashboard Styles */
    .stat-card {
        border-radius: 16px;
        transition: all 0.3s ease;
        border: none;
        overflow: hidden;
    }
    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15) !important;
    }
    .stat-card .stat-icon {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
    }
    .stat-card h3 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0;
    }
    .stat-card .card-body {
        padding: 1.5rem;
    }

    /* BugÃ¼n KartÄ± - Profesyonel Koyu Mavi */
    .today-card {
        background: linear-gradient(135deg, #1e3a5f 0%, #0d2137 100%);
        border-radius: 20px;
        color: white;
        overflow: hidden;
        position: relative;
    }
    .today-card::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle, rgba(255,255,255,0.08) 0%, transparent 60%);
        pointer-events: none;
    }
    .today-card .card-body {
        position: relative;
        z-index: 1;
        padding: 2rem;
    }
    .today-card .today-icon {
        width: 80px;
        height: 80px;
        background: rgba(255,255,255,0.15);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 1rem;
        backdrop-filter: blur(5px);
    }
    .today-card .today-stat {
        background: rgba(255,255,255,0.1);
        border-radius: 12px;
        padding: 1.25rem;
        backdrop-filter: blur(5px);
        transition: all 0.3s;
    }
    .today-card .today-stat:hover {
        background: rgba(255,255,255,0.18);
        transform: scale(1.02);
    }
    .today-card .stat-value {
        font-size: 2.2rem;
        font-weight: 800;
    }
    .today-card .stat-label {
        opacity: 0.9;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* HÄ±zlÄ± EriÅŸim KartlarÄ± */
    .quick-menu {
        border-radius: 16px;
        overflow: hidden;
    }
    .quick-menu-item {
        padding: 1.25rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
        color: #333;
        background: white;
        transition: all 0.3s;
        border-bottom: 1px solid #eee;
    }
    .quick-menu-item:last-child {
        border-bottom: none;
    }
    .quick-menu-item:hover {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding-left: 1.75rem;
        color: #0d6efd;
    }
    .quick-menu-item .menu-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        transition: all 0.3s;
    }
    .quick-menu-item:hover .menu-icon {
        transform: scale(1.1);
    }
    .quick-menu-item .menu-text {
        font-weight: 600;
        font-size: 1rem;
    }
    .quick-menu-item .menu-desc {
        font-size: 0.8rem;
        color: #6c757d;
    }

    /* Etkinlik Listesi */
    .activity-card {
        border-radius: 16px;
        overflow: hidden;
    }
    .activity-item {
        border-left: 4px solid #e9ecef;
        transition: all 0.3s;
        padding: 1.25rem;
    }
    .activity-item:hover {
        border-left-color: #0d6efd;
        background: linear-gradient(135deg, #f8f9fa 0%, white 100%);
    }
    .progress-bar-custom {
        height: 8px;
        border-radius: 4px;
    }

    /* Son SatÄ±ÅŸlar */
    .sale-item {
        padding: 1rem;
        border-bottom: 1px solid #f0f0f0;
        transition: all 0.2s;
    }
    .sale-item:hover {
        background: #f8f9fa;
    }
    .sale-badge {
        font-size: 0.85rem;
        padding: 0.35rem 0.75rem;
        border-radius: 8px;
        font-weight: 600;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .today-card .stat-value {
            font-size: 1.6rem;
        }
        .stat-card h3 {
            font-size: 1.5rem;
        }
    }
</style>

<div class="container-fluid p-4">
    
